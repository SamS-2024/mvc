{% extends 'base.html.twig' %}

{% block title %}Bok{% endblock %}

{% block body %}

<div class="library-container">

        <p>Titel: {{book.title}}</p>
        <p>ISBN: {{book.isbn}}</p>
        <p>Författare: {{book.author}}</p>

    <img src="{{book.image}}" alt="{{book.title}}" width=300 class="book-img">

</div>

 <div class=".book-link">
     <a href="{{ path('book-list') }}" class="links">Boklistan</a>
     <a href="{{ path('find_book_form') }}" class="links">Boksökning</a>
</div>

{% endblock %}
