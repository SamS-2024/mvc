{% extends 'base.html.twig' %}

{% block title %}Uppdatera en bok{% endblock %}

{% block body %}

<h1>Ändra bokens detaljer</h1>
<form method="POST" class="update-book-form" action="{{ path('book_update') }}">
    <label for="id">Id (endast läsning)</label>
    <input type="text" name = "id" value = "{{ book.id }}" readonly>

    <label for="title">Titel</label>
    <input type="text" name = "title" value = "{{ book.title }}">

    <label for="isbn">ISBN</label>
    <input type="text" name = "isbn" value ="{{ book.isbn }}">

    <label for="author">Författare</label>
    <input type="text" name = "author" value =" {{ book.author }}">

    <label for="image">Bild</label>
    <input type="text" name = "image" value ="{{ book.image }}">

    <button type="submit" class="links">Spara</button>

</form>
{% endblock %}
